<div class='slim-container border-thin'>
  <div>
    <%= form_tag(staff_challenges_path, method: 'get') do %>
      <div class='container-space-between'>
        <div>
          <div class='container-row'>
            <div class='slim-container'>
              <span> <%= t('challenges.attr.difficulty.label') %> </span>
              <%= select_tag(:difficulty, options_for_select(1..10, params[:difficulty]), include_blank: t('staff.challenges.search.difficulty-choice')) %>
            </div>
            <div class='slim-container'>
              <span> <%= t('challenges.attr.status.label') %> </span>
              <%= select_tag(:status, options_for_select(Challenge.statuses, params[:status]), include_blank: t('staff.challenges.search.status-choice')) %>
            </div>
            <div class='slim-container'>
              <span> <%= t('challenges.attr.duration.label') %> </span>
              <span> <%= number_field_tag 'duration_min', params[:duration_min], within: 1..500, placeholder: t('staff.challenges.search.duration_max-choice') %> </span>
              <span> <%= number_field_tag 'duration_max', params[:duration_max], within: 1..500, placeholder: t('staff.challenges.search.duration_min-choice') %> </span>
            </div>
          </div>
        </div>
        <div> <%= submit_tag t('shared.submit_form') %> </div>
      </div>
    <% end %>
  </div>
</div>
