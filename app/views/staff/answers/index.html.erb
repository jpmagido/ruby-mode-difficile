<h3>Staff::Answers#index</h3>
<%= link_to t('shared.back'), :back %>
<br>
<hr>
<br>

<% answers.each do |answer| %>
    <%= link_to answer.title, staff_challenge_answer_path(answer.challenge, answer) %>
    <%= link_to t('shared.link_edit'), edit_staff_challenge_answer_path(answer.challenge, answer) %>
    <%= button_to t('shared.link_destroy'), staff_challenge_answer_path(answer.challenge, answer), method: :delete, data: { confirm: t('shared.destroy-warning') } %>
<% end %>
