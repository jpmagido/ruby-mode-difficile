<div class='slim-container border-thin'>
  <%= form_tag(login_challenges_path, method: 'get') do %>
    <div class='space-between'>
      <div class='container-column'>
        <div class='slim-container'>
          <span> <%= t('shared.attr.title') %> : </span>
          <%= search_field_tag(:title, params[:title]) %>
        </div>
        <div class='slim-container'>
          <span> <%= t('shared.attr.author') %> : </span>
          <%= collection_select(:user, :user_id, User.joins(:coach), :id, :login) %>
        </div>
        <div class='slim-container'>
          <span> <%= t('shared.models.doc') %> : </span>
          <%= collection_select(:doc, :doc_id, Doc.joins(:doc_links), :id, :title) %>
        </div>
      </div>
      <div class='container-column'>
        <div class='slim-container'>
          <span> <%= t('challenges.attr.difficulty.label') %> </span>
          <%= number_field_tag(:difficulty, params[:difficulty], within: 1..10, placeholder: t('staff.challenges.search.difficulty-choice')) %>
        </div>
        <div class='slim-container'>
          <span> <%= t('challenges.attr.duration.label') %> </span>
          <span> <%= number_field_tag :duration_min, params[:duration_min], within: 1..500, placeholder: t('staff.challenges.search.duration_min-choice') %> </span>
          <span> <%= number_field_tag :duration_max, params[:duration_max], within: 1..500, placeholder: t('staff.challenges.search.duration_max-choice') %> </span>
        </div>
      </div>
      <div class='container-column'>
        <%= submit_tag t('shared.search_form'), class: 'button' %>
        <br>
        <%= link_to t('shared.reset-filters'), staff_challenges_path, class: 'button' %>
      </div>
    </div>
  <% end %>
</div>
