<%= turbo_frame_tag student do %>
  <div class='container'>
    <div>
      <%= form_with model: [:academy, student] do |f| %>
        <div class='slim-container'>
          <%= f.label :description %>
          <%= f.rich_text_area :description, size: '70x5' %>
        </div>
        <br>
        <%= f.submit t('shared.submit_form') %>
      <% end %>
      <br>
      <%= link_to t('shared.back'), academy_student_path %>
    </div>
  </div>
<% end %>
